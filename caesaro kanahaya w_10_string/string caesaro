<body>
    <h1>Method dalam objek string pada Javascript</h1>
    <ul>
        <li><input type="button" value="string.charAt()" onclick="charAt()"></li><br>
        <li><input type="button" value="string.charCodeAt()" onclick="charCodeAt()"></li><br>
        <li><input type="button" value="string.concat()" onclick="concat()"></li><br>
    </ul>
</body>
<script>
    function charAt() {

        var tes = "CaesaroKanahaya"

        document.writeln ("Var tes : CaesaroKanahaya <br>")

        /*  Output nya : tes.charAt(0)
                         tes.charAt(7)
            0 yaitu huruf pertama pada var tes dan 7 huruf ke 7 pada var tes
        */
        document.writeln ("Output : ");

        /* charAt Output */
        document.writeln (tes.charAt(0));
        document.writeln (tes.charAt(7));

    }

    function charCodeAt() {

        var tes = "CaesaroKanahaya"

        document.writeln ("Var tes : CaesaroKanahaya <br>");

        /*  Output nya : tes.charCodeAt(0)
                         tes.charCodeAt(7)
            Dapat angka 65 karena c=67 
            Dapat angka 65 karena k=75 
        */
        document.writeln ("Output : ");

        /*Output*/
        document.writeln (tes.charCodeAt(0));
        document.writeln (tes.charCodeAt(7));
    }

    function concat() {

var tes = "CaesaroKanahaya"

document.writeln ("Var tes : CaesaroKanahaya <br>");

/*  Output nya : tes.concat(Widodo)
                 tes.concat(0110)
    Dapat Widodo karna menggunakan concat
    Dapat 0110 karna menggunakan concat
*/
document.writeln ("Output : <br>");

/*Output*/
document.writeln (tes.concat(" Widodo <br> "));
document.writeln (tes.concat(" 0110 <br> "));
}
</script>
